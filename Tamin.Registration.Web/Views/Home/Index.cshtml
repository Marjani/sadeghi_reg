{"class","form-horizontal"},
{"role","form" },
{"enctype" , "multipart/form-data"},
}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-sm-12 alert alert-success">
                    <table class="table">
                        <thead>
                            <tr>
                                <th colspan="2">
                                    انتخاب کارگاه
                                </th>
                                <th>
                                زمان برگزاری</th>

                            </tr>
                        </thead>
                        <tr>
                            <td style="width:15px;">
                                @*<input type="radio" name="EventId" value="1" disabled="disabled" />*@
                            </td>
                            <td>
                                <p>
                                    Bio-Centric Health Management in Iran:
                                    Relaxation, Imagery, Music and Movement for Adult and
                                    Children to reduce Stress
                                </p>
                            </td>
                            <td>
                                30 مرداد 1398
                                <br />
                                8 الی 12
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @*<input type="radio" name="EventId" value="2" disabled="disabled" />*@
                            </td>
                            <td>
                                <p>
                                    Bio-Centric Health Management in Iran:
